<SeventhWindow>:
    name: 'man'
    BoxLayout:
        orientation: 'vertical'

        size: root.width, root.height
        TextInput:
            id:num_input
            text: '0'
            font_size: 64
            halign: 'right'
            size_hint: '1','0.4'



        GridLayout:

            cols: 4
            rows: 5
            size: root.width , root.height

            Button:
                id: extra
                text: 'More'
                font_size: 32
                on_press: root.extra()
                background_normal : ''
                background_color : (161/255, 226/255, 100/255, 1)
                on_release: app.root.current = 'auto_sum'

            Button:
                id: clear
                text: 'AC'
                font_size: 32
                on_press:root.clear()

            Button:
                id: backspace
                text: '<<'
                font_size: 32
                on_press: root.backspace()

            Button:
                text: '÷'
                font_size: 32
                on_press: root.math_sign('÷')

            Button:
                text: '9'
                font_size: 32
                on_press: root.button_press(9)
                background_color: (0,0,0,1)

            Button:
                text: '8'
                font_size: 32
                on_press: root.button_press(8)
                background_color: (0,0,0,1)

            Button:
                text: '7'
                font_size: 32
                on_press: root.button_press(7)
                background_color: (0,0,0,1)

            Button:
                text: '×'
                font_size: 32
                on_press: root.math_sign('×')

            Button:
                text: '6'
                font_size: 32
                on_press: root.button_press(6)
                background_color: (0,0,0,1)

            Button:
                text: '5'
                font_size: 32
                on_press: root.button_press(5)
                background_color: (0,0,0,1)

            Button:
                text: '4'
                font_size: 32
                on_press: root.button_press(4)
                background_color: (0,0,0,1)

            Button:
                text: '-'
                font_size: 32
                on_press: root.math_sign('-')

            Button:
                text: '3'
                font_size: 32
                on_press: root.button_press(3)
                background_color: (0,0,0,1)

            Button:
                text: '2'
                font_size: 32
                on_press: root.button_press(2)
                background_color: (0,0,0,1)

            Button:
                text: '1'
                font_size: 32
                on_press: root.button_press(1)
                background_color: (0,0,0,1)

            Button:
                text: '+'
                font_size: 32
                on_press: root.math_sign('+')

            Button:
                text: 'Exit'
                font_size: 32
                on_release: app.root.current = 'welcome'
                background_normal: ''
                background_color: (255/255, 178/255, 101/255, 1)

            Button:
                text: '0'
                font_size: 32
                on_press: root.button_press(0)
                background_color: (0,0,0,1)

            Button:
                text: '.'
                font_size: 32
                on_press: root.button_press('.')
                background_color: (0,0,0,1)

            Button:
                text: '='
                font_size: 32
                on_press: root.equal()


